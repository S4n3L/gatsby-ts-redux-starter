{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@client/*": ["client/*"],
      "@server/*": ["server/*"],
      "@static/*": ["client/static/*"],
      "@styles/*": ["client/styles/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // This is for Material-UI
    "lib": ["es6", "dom"],
    "noImplicitThis": true,
    "strictNullChecks": false
  },
  "include": [
    "./src/**/**/*"
  ]
}
